@model IEnumerable<BarKavTavan.Domain.Entities.Project>

@{
    ViewData["Title"] = "service";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-section">
    <div class="container">
        <div class="row">


            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 py-3">
                    <div class="card-blog">
                        <div class="header">
                            <div class="avatar">
                                <img src="../images/@item.iamge" alt="">
                            </div>
                            <div class="entry-footer">
                                <div class="post-author">@item.title</div>

                            </div>
                        </div>
                        <div class="body">
                            <div class="post-title"><a href="#">@item.description</a></div>

                        </div>

                    </div>
                </div>
            }

